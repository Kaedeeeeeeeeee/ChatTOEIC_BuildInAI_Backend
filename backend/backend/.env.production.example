# ChatTOEIC后端生产环境变量配置模板
# 用于Railway/Render等生产环境部署

# ===============================
# 数据库配置
# ===============================
DATABASE_URL="postgresql://username:password@host:port/database_name"

# ===============================
# JWT认证配置
# ===============================
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"

# ===============================
# 服务器配置
# ===============================
PORT=3001
NODE_ENV="production"
FRONTEND_URL="https://www.chattoeic.com"

# ===============================
# Stripe支付配置 (生产环境)
# ===============================
STRIPE_SECRET_KEY="sk_live_your_live_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_live_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_live_webhook_secret"

# Stripe产品配置
STRIPE_PREMIUM_PRICE_ID="price_live_premium_monthly"
STRIPE_PREMIUM_PRODUCT_ID="prod_live_premium"

# 支付页面URL
PAYMENT_SUCCESS_URL="https://www.chattoeic.com/billing/success"
PAYMENT_CANCEL_URL="https://www.chattoeic.com/billing/cancel"

# ===============================
# 安全配置
# ===============================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_WINDOW_MS=900000
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500

# ===============================
# 数据库配置
# ===============================
DB_CONNECTION_LIMIT=10