{
  "name": "chattoeic-api",
  "version": "2.0.0",
  "description": "ChatTOEIC Backend API Server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npx prisma generate && npx esbuild src/server.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/server.js --external:@prisma/client --external:bcryptjs --external:compression --external:cors --external:express --external:express-rate-limit --external:express-slow-down --external:helmet --external:joi --external:jsonwebtoken --external:morgan --external:uuid --external:dotenv --external:@google/generative-ai --external:google-auth-library --external:response-time --external:winston --external:util --external:qs --external:object-inspect --external:side-channel --external:stripe --external:@types/stripe",
    "build:render": "./render-build.sh",
    "start": "node dist/server.js",
    "start:bypass": "node bypass-all-migrations.js",
    "start:simple": "node simple-db-fix.js && node dist/server.js",
    "start:server": "node dist/server.js",
    "migration:generate": "npx prisma migrate dev",
    "migration:deploy": "npx prisma migrate deploy",
    "migration:prod": "node migrate-production.js",
    "migration:render": "node deploy-db-migration.js",
    "db:generate": "npx prisma generate",
    "db:seed": "tsx src/scripts/seed.ts",
    "admin:create": "tsx src/scripts/createAdmin.ts",
    "data:fix-login-dates": "tsx src/scripts/fixUserLoginDates.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "toeic",
    "ai",
    "education",
    "api"
  ],
  "author": "ChatTOEIC Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.14.0",
    "@types/pg": "^8.15.5",
    "@types/stripe": "^8.0.416",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-slow-down": "^2.0.3",
    "google-auth-library": "^10.2.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "response-time": "^2.3.2",
    "stripe": "^18.4.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.0",
    "@types/response-time": "^2.3.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.14.0",
    "prisma": "^6.14.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
